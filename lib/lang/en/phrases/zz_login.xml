<?xml version="1.0" encoding="UTF-8" standalone="no" ?>
<!DOCTYPE phrases SYSTEM "entities.dtd">

<epp:phrases xmlns="http://www.w3.org/1999/xhtml" xmlns:epp="http://eprints.org/ep3/phrase" xmlns:epc="http://eprints.org/ep3/control">

    <!-- login -->
    <epp:phrase id="cgi/login:page_layout">
        <div class="container col-md-12">
            <div class="row text-center">
                    <p><epc:pin name="login_message" /> <epc:pin name="reset_link" /></p>

                    <epc:pin name="problems" />
            </div>
            <div class="row">
                <div class="form-inline text-center">
                <!-- LOGIN FORM -->
                    <div class="form-group">
                        <epc:pin name="input_username" />
                    </div>
                    <div class="form-group">
                        <epc:pin name="input_password" />
                    </div>
                    <div class="form-group">
                        <epc:pin name="login_button" />
                    </div>
                </div>
            </div>
        </div>
    </epp:phrase>
    <epp:phrase id="cgi/login:reset_link">If you have forgotten your password, you may <a href="{$config{perl_url}}/reset_password" tabindex="5" class="forgot-password">reset</a> it.</epp:phrase>
    <epp:phrase id="cgi/login:pre_message">Please enter your username and password.</epp:phrase>

</epp:phrases>
